
<% include ../partials/header %>

  <div class="container">
    <div class="row text-center">
      <h1>Add a new comment to <%= campground.name %></h1>
      <div style="width:30%; margin: 35px auto;">
        <form method="post" action="/campgrounds/<%= campground._id %>/comments">
          <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="Text">
          </div>
          <%# <div class="form-group">
            <input class="form-control" type="text" name="comment[author]" placeholder="Author">
          </div>%>
          <div class="form-group">
            <input class="btn btn-large btn-primary btn-block" type="submit" name="" value="Add comment">
          </div>
        </form>
        <a href="/campgrounds">View all campgrounds</a>
     </div>
    </div>
  </div>

<% include ../partials/footer %>
